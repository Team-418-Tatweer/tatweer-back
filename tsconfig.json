{
    "compilerOptions": {
        "target": "ES2021",
        "lib": ["es2021", "dom"],
        "module": "commonjs",   
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "@/*": ["src/*"],
            "@models/*": ["db/models/*"],
            "@services/*": ["services/*"],
            "@utils/*": ["utils/*"],
            "@db/*": ["db/*"],
            "@myTypes/*": ["types/*"],
            "@controllers/*": ["controllers/*"],
            "@routes/*": ["routes/*"],
            "@middleware/*": ["middleware/*"],
            "@config/*": ["config/*"],
            "@modules/*": ["modules/*"]
        },

        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "out": "docs"
    },
    "include": ["src", "src/test"]
}
